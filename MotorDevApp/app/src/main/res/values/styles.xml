    <style name="infostyle.fuente.boton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">@string/fuente_medium</item>
        <item name="android:textSize">@dimen/sp_fuente_boton</item>
